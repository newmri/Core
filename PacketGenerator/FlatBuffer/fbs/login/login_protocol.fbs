include "../common/define_protocol.fbs";

namespace Login;

enum ErrorCode : byte
{
  SUCCESS = 0,
  UNKNOWN,
  ALREADY_LOGINED
}

union Packet {
    CS_LOGIN_REQ,
    SC_LOGIN_RES,
    CS_CHARACTER_CREATE_REQ,
}

table CS_LOGIN_REQ {
    uid:int64;
    token:int32;
}

table SC_LOGIN_RES {
    result:ErrorCode;
}

table CS_CHARACTER_CREATE_REQ {
    name:string;
    job:Define.Job;
}

table Root {
    packet:Packet;
}

root_type Root;