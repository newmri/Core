include "../common/define_protocol.fbs";

namespace Login;

union Packet {
    CS_LOGIN_REQ,
    SC_LOGIN_RES,
    CS_CHARACTER_CREATE_REQ,
}

table CS_LOGIN_REQ {
    uid:int64;
    token:int32;
}

table SC_LOGIN_RES {
    result:bool;
}

table CS_CHARACTER_CREATE_REQ {
    name:string;
    job:Define.Job;
}

table Root {
    packet:Packet;
}

root_type Root;